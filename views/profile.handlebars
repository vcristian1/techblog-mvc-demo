<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="card mt-5 mb-5">
  <div class="card-header">
    <h3>What is on your mind?</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name"></label>
        <input class="form-control" type="text" id="project-name" placeholder="Subject" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc"></label>
        <textarea class="form-control" id="project-desc" placeholder="Body" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="p-2 mt-4 mb-4 btn btn-primary">Post</button>
      </div>
    </form>
  </div>
</div>
<h3>Recent Posts</h3>
{{#if projects.length}}
  <div class="mt-5 card mb-5">
    <div class="card-header project-list">
      {{#each projects as |project|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a class="text-decoration-none" href="/project/{{project.id}}">{{project.name}}</a></h4>
        </div>
        <div class="col-md-8">
          <p> Posted on {{format_date project.date_created}}</p>
        </div>
        <div class="col-md-4">
          <button class="p-2 mb-2 btn btn-sm btn-danger" data-id="{{project.id}}">Remove</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  

<script src="./js/profile.js"></script>
