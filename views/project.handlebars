<div class="card mb-5">
  <div class="card-header">
    <div class="text-center">
      <h2>{{name}}</h2>
      <p>{{description}}</p>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
      <p>
        <button class="btn btn-primary">Reply</button>
        <a href="/" class="p-2 btn btn-sm btn-danger">Go Back</a>
      </p>
    </div>
  </div>
</div>

{{!-- Previous comments --}}
    {{#each Comments as |comment| }}
    <div class="post card">
        <h1 class="card-header com-header"></h1>

        <p class="card-body">
            {{comment.body}}
        </p>
        <p class="card-body">
            ~ {{../User.username}}, {{format_date ../createdAt}}
        </p>
    </div>
    {{/each}}

    {{!-- Comment submission Allowed only if logged in--}}
    {{#if logged_in}}
    <div class="post card">
        <form id="new-comment-form" class="card-body">
            <div>
                <label for="post-body" class="form-label">Comment:</label>
                <textarea name="comment-body" type="text" id="post-body" class="form-textarea form-input"></textarea>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
    {{else}}
    <div class="card-body text-center">
        Login to post a comment!
    </div>
    {{/if}}

    <script src="/js/comment.js"></script>