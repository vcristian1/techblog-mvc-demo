<div class="row">

  <div class="col-md-6">
    <h2>Log In</h2>
  </div>

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form class="form login-form">
          <div class="form-group form-outline mb-4">
            <label for="email-login"></label>
            <input class="form-control form-control-lg form-input" placeholder="Email Address" type="text" id="email-login" />
          </div>
          <div class="form-group form-outline mb-3">
            <label for="password-login"></label>
            <input class="form-input form-control form-control-lg form-input" placeholder="Password" type="password" id="password-login" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-lg" type="submit">Log In</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-6">
   
  </div>

  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
         <h2 class="text-left">Sign Up</h2>
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form class="form signup-form">
          <div class="form-group form-outline mb-3">
            <label for="name-signup"></label>
            <input class="form-input form-control form-control-lg form-input" placeholder="Name" type="text" id="name-signup" />
          </div>
          <div class="form-group form-outline mb-3">
            <label for="email-signup"></label>
            <input class="form-control form-control-lg form-input" placeholder="Email Address" type="email" id="email-signup" />
          </div>
          <div class="form-group form-outline mb-3">
            <label for="password-signup"></label>
            <input class="form-input form-control form-control-lg form-input" placeholder="Password" type="password" id="password-signup" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-lg" type="submit">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script src="./js/login.js"></script>
