    <!-- Right -->
    <div>
      <a href="https://github.com/vcristian1" class="text-white me-4">
        <i class="bi bi-github"></i>
      </a>
      <a href="https://www.linkedin.com/in/cristian-vargas-13686a1a3/" class="text-white">
        <i class="bi bi-linkedin"></i>
      </a>
    </div>
    <!-- Right -->
  </div>
</footer>


</html>
